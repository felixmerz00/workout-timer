<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/row_item_drawable"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvListItem"
            style="@style/BlueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/workout" />

        <ImageButton
            android:id="@+id/editWoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/image_button_2"
            android:contentDescription="@string/edit_the_selected_workout"
            app:tint="@color/dark_blue"
            android:visibility="gone"
            app:srcCompat="@drawable/edit_24dp_fill0_wght400_grad0_opsz24" />

        <ImageButton
            android:id="@+id/delWoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_image_button"
            android:contentDescription="@string/delete_the_selected_workout"
            android:visibility="gone"
            app:srcCompat="@drawable/delete_24dp_fill0_wght400_grad0_opsz24"
            app:tint="@color/light_gray" />

    </LinearLayout>

</FrameLayout>
