<resources>

    <style name="Widget.Theme.IntervalTimer.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="FragmentHeader" parent="@style/TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="CountDown" parent="@style/TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="GrayText" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="BlueText" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="BlueButtonText" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextField">
        <item name="android:textColor">@color/light_gray</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>